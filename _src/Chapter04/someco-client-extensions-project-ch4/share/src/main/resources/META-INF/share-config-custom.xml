<alfresco-config>

	<config evaluator="aspect" condition="sc:webable">
		<forms>
			<form>
				<field-visibility>
					<show id="sc:published" />
					<show id="sc:isActive" />
				</field-visibility>
				<appearance>
					<field id="sc:isActive" read-only="true" />
				</appearance>
			</form>
		</forms>
	</config>

